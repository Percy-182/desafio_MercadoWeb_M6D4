{{!-- Iterar sobre la lista de frutas y mostrar los botones y los modales --}}
{{#each productos}}
<!-- Bot√≥n para la fruta -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{this}}Modal">
  {{this}}
</button>

<!-- Modal para la fruta seleccionada -->
<div class="modal fade" id="{{this}}Modal" tabindex="-1" role="dialog" aria-labelledby="{{this}}ModalLabel"
  aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="{{this}}ModalLabel">Fruta Seleccionada</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div id="{{this}}Seleccionada"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

  <!-- Maneja la seleccion y visualizacion de las Frutas -->
  <script>
   $(document).ready(function () {
      // Maneja el clic en la imagen de la fruta
      $('.fruta-img').click(function () {
        var fruta = $(this).data('fruta');
        $('#frutaSeleccionada').html(`<img src="/${fruta}.png" alt="${fruta}" class="img-fluid">`);
        $('#frutaModal').modal('show');
      });

      // Maneja el clic en el bot√≥n de la fruta
      $('.fruta-btn').click(function () {
        var fruta = $(this).data('fruta');
        $('#frutaSeleccionada').html(`<img src="/${fruta}.png" alt="${fruta}" class="img-fluid">`);
        $('#frutaModal').modal('show');
      });
    });

  </script>
<script src="../server.js"></script>
 <!-- Bootstrap JS bundle-->
